
<div class="row">
    <div class="table-responsive">
    <div class="col-md-12">
           <h2>Posts</h2>
           <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
          <hr />

	<table class="table">
<thead>
    <tr>
        <th>Post ID</th>
        <th>Title</th>
        <th>Post Date</th>
        <th>Category</th>
        <th>Published</th>
        <th></th>
    </tr>
</thead>
    {{#each posts}}
    <tbody>
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.postDate}}</td>
        <td><a href="/posts?category={{category}}">{{category}}</a></td>
        <td>{{this.published}}</td>
        <td><a href="/posts/delete/{{id}}"class="btn btn-danger"> Remove</a></td>

    </tr>
    </tbody>
    {{/each}}
</table>

</div>
</div>
{{!-- //This will allow us to correctly show the error message from the .catch() in our route --}}
<div class="col-md-12 text-center">
    {{#unless posts}}
     <strong>{{message}}</strong>
    {{/unless}}
</div>
</div>

